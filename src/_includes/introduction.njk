<div class="tc-introduction">
    <div class="tc-container">
        <div class="tc-introduction__logo-container">
            <img class="hide-for-medium" src="/images/terracycle-logo-h55.png" width="81" height="55" alt=""/>
            <img class="show-for-medium" src="/images/terracycle-logo-h100.png" width="146" height="100" alt=""/>
            {% if data.introduction.charityLogoFileName %}
                <img class="hide-for-medium" src="/images/tc-charity-logo-{{data.lang | lower}}/70x70/{{data.introduction.charityLogoFileName | replace(" ", "%20")}}" width="70" height="70" alt=""/>
                {# Note: replace()! #}
                <img class="show-for-medium" src="/images/tc-charity-logo-{{data.lang | lower}}/130x130/{{data.introduction.charityLogoFileName | replace(", Mobile", "") | replace("-Mobile", "") | replace(" ", "%20")}}" width="130" height="130" alt=""/>
            {% endif %}
        </div>
        <div class="tc-introduction__inner-container">
            {% for paragraph in data.introduction.paragraphs %}
                <p>{{paragraph | safe}}</p>
            {% endfor %}
        </div>
        <div class="tc-introduction__inner-container tc-introduction__btn-container">
            <a class="tc-btn" href="#tc-widget">
                {% for label in data.introduction.button.label %}
                    <span>{{label}}</span>
                    {% if loop.index > 0 and loop.index < loop.length %}
                        <span>+</span>
                    {% endif %}
                {% endfor %}
            </a>
        </div>
    </div>
</div>
